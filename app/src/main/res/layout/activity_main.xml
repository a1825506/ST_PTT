<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#464444"
    tools:context="com.saiteng.stptt.MainActivity">


    <TextView
        android:id="@+id/ptt_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="STPTT"
        android:textColor="@color/text_write"
        android:textSize="30sp"
        />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/corners_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear_ip"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/img_ip"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
            <EditText
                android:id="@+id/ip_address"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/edittext_bg"
                android:textCursorDrawable="@color/common_bg"
                android:layout_marginLeft="13dp"
                android:hint="ip:"
                android:text="139.224.68.157"
                android:textColor="#959090"
                />
        </LinearLayout>

        <View
            android:id="@+id/dotted_line1"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layerType="software"
            android:background="@drawable/bg_dotted_line"
            />

        <LinearLayout
            android:id="@+id/linear_username"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/img_username"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@mipmap/username"
                />


        <EditText
                android:id="@+id/username"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginLeft="13dp"
                android:cursorVisible="true"
                android:textCursorDrawable="@color/common_bg"
                android:background="@drawable/edittext_bg"
                android:hint="账号:"
                android:text="user1"
                android:textColor="#959090"
                />

        </LinearLayout>

        <View
            android:id="@+id/dotted_line"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layerType="software"
           android:background="@drawable/bg_dotted_line"
            />
    <LinearLayout
        android:id="@+id/linear_password"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_passowrd"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@mipmap/password"
            />
        <EditText
            android:id="@+id/password"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_bg"
            android:textCursorDrawable="@color/common_bg"
            android:layout_marginLeft="13dp"
            android:hint="密码:"
            android:text="user1"
            android:inputType="textPassword"
            android:textColor="#959090"
            />
    </LinearLayout>
        </LinearLayout>

    <Button
        android:id="@+id/login"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="登录"
        android:textColor="@color/text_write"
        android:textSize="20dp"
        android:background="@drawable/selector_bg_btn"
        />

    <TextView
        android:id="@+id/ptt_version"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="版本："
        android:textColor="@color/text_write"
        android:textSize="10sp"
        />


</RelativeLayout>
